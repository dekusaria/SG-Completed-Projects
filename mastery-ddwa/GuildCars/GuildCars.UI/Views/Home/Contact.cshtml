@model GuildCars.UI.Models.ContactVM
@{
    ViewBag.Title = "Contact";
}

<div class="row">
    <h2 class="page-header">Contact Us</h2>
</div>


<div class="container contact-form">
    <div class="row mx-auto justify-content-around">
        <div class="col-sm-12 col-md-4 offset-sm-0 offset-md-1">
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmContact" }))
            {
                @Html.ValidationSummary()
                <div class="mb-3">
                    <label class="form-label">First Name</label>
                    @Html.TextBoxFor(m => m.Customer.CustomerFirstName, new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    <label class="form-label">Last Name</label>
                    @Html.TextBoxFor(m => m.Customer.CustomerLastName, new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    @Html.TextBoxFor(m => m.Customer.CustomerEmail, new { @class = "form-control", type = "email" })
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone</label>
                    @Html.TextBoxFor(m => m.Customer.CustomerPhone, new { @class = "form-control" })
                    <div id="phoneHelp" class="form-text" style="color:white;">ex: XXX-XXX-XXXX</div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Message</label>
                    <textarea id="Contact_ContactMessage" class="form-control" name="Contact.ContactMessage" rows="2">@if (Model.Vin != null) { <text>VIN # : @Model.Vin</text> }</textarea>

                </div>
                <div class="mb-3">
                    <button class="btn btn-success" type="submit">Submit</button>
                </div>
            }
        </div>
        <div class="col-sm-12 col-md-5" style="padding-top: 20px;">
            <div class="google-maps">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2822.863741037526!2d-93.249166384215!3d44.96676207451731!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x52b32d445fcfe3cd%3A0x33fc030aab323e5!2sTriple%20Rock%20Social%20Club!5e0!3m2!1sen!2sus!4v1628807515635!5m2!1sen!2sus"
                        width="600"
                        height="450"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy">
                </iframe>
            </div>
            <div class="row" style="text-align:center; margin-top:10px;">
                <div class="col-6">
                    <p><strong>629 Cedar Ave <br />Minneapolis, MN 55555</strong></p>
                </div>
                <div class="col-6">
                    <p><strong>Sales: </strong>111-111-1111<br /><strong>Service: </strong>111-111-1112</p>
                    <p></p>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            $('#frmContact').validate({
                rules: {
                    'Customer.CustomerFirstName': {
                        required: true
                    },
                    'Customer.CustomerLastName': {
                        required: true
                    },
                    'Contact.ContactMessage': {
                        required: true
                    }
                }
            });
        });
    </script>

}